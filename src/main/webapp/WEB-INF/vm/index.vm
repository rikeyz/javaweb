                <tr>
                    <td><label>姓名</label></td>
                    <td><input type="text" name="name"/> </td>
                </tr>
                <tr>
                    <td><labe>密码</labe></td>
                    <td><input type="password" name="passwd"/></td>
                </tr>
                <tr>
                    <td></td>
                    <td><input type="submit" name="submit" id="submit" value="登录"/></td>
                </tr>
            </tbody>
        </table>
    </form>
</div>
</body>
</html>